@using RETRA_HOTEL_SYSTEM_2.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <!-- Change Password Title -->
        <h2 class="text-center mb-4">Change Password</h2>

        <!-- Change Password Form -->
        <form asp-action="ChangePassword" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email Field (Read-only) -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-envelope"></i> <!-- Email Icon -->
                    </span>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
            </div>

            <!-- New Password Field with Icon -->
            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i> <!-- Password Icon -->
                    </span>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm New Password Field with Icon -->
            <div class="form-group mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label">Confirm New Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i> <!-- Confirm Password Icon -->
                    </span>
                    <input asp-for="ConfirmNewPassword" class="form-control" type="password" placeholder="Confirm new password" />
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <input type="submit" value="Submit" class="btn btn-success w-100 p-2" />

            <!-- Back Link -->
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}